; Skyrim Mod Manager Configuration
; Edit these paths to customize where your mods and Skyrim files are located

[paths]
; Folder where mod ESP/ESM files are stored
mods_folder = /switch/skymanager/mods

; Path to Skyrim.ccc file that controls which mods are loaded
skyrim_ccc = /atmosphere/contents/01000A10041EA000/romfs/Skyrim.ccc

; Base path for Skyrim's layeredFS data folder
atmosphere_layeredfs = /atmosphere/contents/01000A10041EA000/romfs/Data
; Title ID; defaults to base Skyrim
title_id = 01000A10041EA000


; Skymanager settings
[settings]
; Do not print invalid files (not ESP, BSA, ESM, INI files)
ignore_invalid_files = false
hide_cc_content = true

